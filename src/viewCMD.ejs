<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('./composants/head') %>
    <title>Document</title>
</head>
<body>
  <%- include ('./composants/menu') %>
  <div class="contentV">
    
  <div class="tableview">
    <div class="goback">
        <a href="/"><button type="button" class="btn btn-success">Retour  </button></a>
    </div>
    <div class="titeV">
        <h2>Nombre produit</h2>
        <h4 id="nbrP">
            <%=rslt.length%>
        </h4>
    </div>
    <table class="table table-striped table-hover" id="l">
        <tr>
           <th>nom</th>
            <th>Qte</th>
            <th>prix</th>
            
        </tr>
        
        <% for(i=rslt.length-1;i>=0;i--){%>
           
            <tr>
               <td><%= rslt[i].nom_p %></td>
                <td><%=rslt[i].qte%></td>
                
                <td><%= rslt[i].prix_u %></td>
            </tr>
          
        <%}%>
    </table>
    </div>
    <div class="detial">    

        <div class="row" >
            <div class="col-sm-6 mb-4 ">
              <div class="card"id="cardID">
                <div class="card-body">
                  <h4 class="card-title">ID</h4>
                  <p class="card-text"><%=id_com %></p>

                </div>
              </div>
            </div>
            <div class="col-sm-6 mb-4" >
                <div class="card" >
                  <div class="card-body"id="etatP">
                    <h4 class="card-title">paye</h4>
                    <h5 class="card-text" >
                        
                        <input type="hidden" name="paye" id="peye" value="oui">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-check-circle"
                         viewBox="0 0 16 16" style="color: #FFF;">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                            <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                          </svg>
                    </h5>
                  </div>
                </div>
              </div>
            <div class="col-sm-6 mb-4">
              <div class="card">
                <div class="card-body bg-danger">
                  <h4 class="card-title">Tolal</h4>
                  <p class="card-text"> <span id="total"></span> DH</p>
    
                </div>
              </div>
            </div>
            <div class="col-sm-6 mb-4">
              <div class="card ">
                <div class="card-body bg-info">
                  <h4 class="card-title">Serveur </h4>
                  <p class="card-text"> <%=nom %></p>
                  
    
                </div>
              </div>
            </div>

          </div>
          <div class="vide" style="height: 63px;">

          </div>
    </div>



    </div>
</body>



<script>
    let paye=document.getElementById('etatP');
    let etat=document.getElementById('peye');
    window.onload= ()=>{
        
        if (etat.value=='oui') {
            paye.style.background='#28A745';
        }else
        paye.style.background='#28A745';
        total();
    }
    function total(){

        let t=0;
        '<% for(i=rslt.length-1;i>=0;i--){%>'
            p='<%= rslt[i].prix_u %>'
            q='<%=rslt[i].qte%>'
            t+=p*q;
        ' <%}%>'
        document.getElementById('total').innerHTML=t;
    }
   
</script>
<script src="./dynamique/menu.js"></script>
</html>