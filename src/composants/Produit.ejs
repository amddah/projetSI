<div class="AjouPro">
    <h2> Noveau Produit</h2>
    <form action="/AjouPro" method="post">
        <div class="child">
            <input type="hidden" name="idPoduit" id="idPoduit">
            <label for="">ID</label><br>
            <input type="text" name="id" id="id" disabled>
        </div>
        <div class="child">
            <label for="">Nom </label><br>
            <input type="text" name="nomProduit" id="nomProduit">
        </div>
        <div class="child">
            <label for="">Prix </label><br>
            <input type="number" name="prixProduit" id="prixProduit" min="1" max="1000">
        </div>
        <div class="btn-ajout">
            <button type="submit" class="btn btn-primary">Ajouter</button>
            <button type="reset" class="btn btn-danger" id="annuler">annuler</button>
        </div>
    </form>
  </div>
<div class="content-Produit">
<div class="btn-ajouter">
    <button type="button" class="btn btn-success btn-lg" id="btn-ajouter"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
      </svg>
        Noveau Produit</button>
</div>

<table class="table table-striped table-hover" id="l">
    <tr>
        <th>ID</th>
        <th>Nom Produit </th>
        <th>Prix (DH)</th>
        <th>Éditer</th>
        <th></th>
    </tr>
    <% for(i=0;i<result.length;i++) {%>
       <% if(i< 10){%>
        <tr>
            <td><%= result[i].id %> <input type="hidden" name="id" value="<%= result[i].id %>" id="ID<%=i%>"></td>
            <td><%= result[i].nom_p %><input type="hidden" name="id" value="<%= result[i].nom_p %>" id="nom<%=i%>"></td>
            <td><%= result[i].prix_u %><input type="hidden" name="id" value="<%= result[i].prix_u %>" id="prix<%=i%>"></td>
            <td class="btn-edit"><button type="button" class="btn btn-warning" id="edit<%=i%>" onclick="Edit('<%=i%>')">Éditer</button></td>
            <td class="btn-edit"><button type="button" class="btn btn-info" id="edit<%=i%>" onclick="supprimer('<%= result[i].id %>')">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                  </svg>
            
            </button></td>
        </tr>
       <% }%>
       
        <% } %>
       
  </table> 
